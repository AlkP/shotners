<% flash.each do |name, msg| -%>
    <% if name == :save %>
        <div class="alert alert-error">
          <h3>Saving failed</h3>
          <li><%= content_tag :div, msg, class: name %></li>
        </div>
    <% elsif name == :user_ok %>
        <div class="alert alert-success">
          <li><%= content_tag :div, msg, class: name %></li>
        </div>
    <% elsif name == :alert %>
        <%= content_tag :div, msg, class: name %>
    <% elsif name == :password %>
    <% else %>
        <div class="alert alert-success">
          <li><%= content_tag :div, msg, class: name %></li>
        </div>
    <% end %>
<% end -%>